<!DOCTYPE html>
<html lang="en">
<head>
  <title>Admin Area</title>
  <link rel="stylesheet" href="stylesheets/style.css">
</head>
<body>
  <% include ./includes/navigation %>
    <div class="table-data">
<h2>Best Available Player</h2>
    <table border="1">
        <tr>
            <th>Name</th>
            <th>Owner</th>
            <th>Keeper</th>
            <th>Add Keeper</th>
            <th>Change Team</th>
            <th>Make Available</th>
        </tr>
        
        <%
        if(userData.length!=0){
        var i=1;
        userData.forEach(function(data){
        %>
        <tr>
            <td class="<%=data.pos %>"><%=data.name %></td>
            <td class="<%=data.pos %>"><%=data.owner %></td>
            <td class="<%=data.pos %>"><%=data.keeper %></td>
            <td class="<%=data.pos %>"><a href="/add-keeper/<%=data.fantnum%>">Edit</a></td>
            <td class="<%=data.pos %>"><a href="/change-team/<%=data.fantnum%>">Edit</a></td>
            <td class="<%=data.pos %>"><a href="/make-available/<%=data.fantnum%>">Edit</a></td>
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="6">No Data Found</td>
            </tr>
        <% } %>
    </table>
    </div>
    <% include ./includes/footer %>
</body>
</html>